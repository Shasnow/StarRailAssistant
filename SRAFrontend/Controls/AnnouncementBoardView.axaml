<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SRAFrontend.Controls"
             xmlns:suki="https://github.com/kikipoulet/SukiUI"
             xmlns:models="clr-namespace:SRAFrontend.Models"
             xmlns:mdxaml="https://github.com/whistyun/Markdown.Avalonia.Tight"
             x:Class="SRAFrontend.Controls.AnnouncementBoardView"
             x:DataType="local:AnnouncementBoardViewModel"
             Width="600"
             Height="400">
    <Design.DataContext>
        <local:AnnouncementBoardViewModel />
    </Design.DataContext>
    <suki:BusyArea BusyText="Loading Announcements..." IsBusy="{Binding IsLoading}">
        <!-- ReSharper disable once Xaml.StyleClassNotFound -->
        <TabControl TabStripPlacement="Left" Classes="HorizontalTabs" ItemsSource="{Binding Announcements}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Title}" TextWrapping="Wrap" TextAlignment="Center" Width="100" />
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate DataType="{x:Type models:Announcement}">
                    <mdxaml:MarkdownScrollViewer Markdown="{Binding Content}"/>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </suki:BusyArea>

</UserControl>